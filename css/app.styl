   width                100%
   z-index              1000

  .menu
    width               80%
    position            fixed
    left                -85%
    height              100vh
    top                 2em
    background-color    black
    color               white
    box-shadow          4px 4px 4px black

    &.popup-style
      left              0
      top               -110vh
      width             auto
      height            auto !important
      overflow          scroll
      box-shadow        0 0 4px black

    li
      font-family               Helvetica, Verdana
      line-height               1.5

      a
        font-size               150%
        display                 block  

    .toggle-menu
      color         #555
      position      fixed
      top           -0.2em
      left          -0.2em
      font-size     200%
      display       block
      width         1.5em
      text-align    center


  .next-page
    background-color         ivory
    position                 fixed
    z-index                  500
    bottom                   1em
    right                    1em
    border-radius            2em
    width                    2em
    height                   2em
    line-height              2.2
    text-align               center
    font-size                150%
    display                  block
    box-shadow               3px 3px 3px #333
    transition               all 750ms

    &.hidden
     box-shadow              0 0 0 #333
     opacity                 0

// --------------------------------------------------
// animation effects
transform-translate()
  transform                  translate( arguments )
  -webkit-transform          translate( arguments )
  -moz-transform             translate( arguments )
  -o-transform               translate( arguments )

animation()
  animation                  arguments
  -webkit-animation          arguments
  -moz-animation             arguments
  -o-animation               arguments



// bounce from bottom
@keyframes bfb
  0% 
    transform                translate3d(0, 5em, 0)
  50%
    transform                translate3d(0, -1em, 0)
  75%
    transform                translate3d(0, 1em, 0)
  100%
    transform                translate3d(0, 0, 0)

// bounce from top
@keyframes bft
  0% 
    transform                translate3d(0, -5em, 0)
  50%
    transform                translate3d(0, 1em, 0)
  75%
    transform                translate3d(0, -1em, 0)
  100%
    transform                translate3d(0, 0, 0)

// appear from left
@keyframes afl
  0%
    transform                translate3d(-10em,  0, 0)
    opacity                  0
  100%
    transform                translate3d(0, 0, 0)
    opacity                  1

// appear from right
@keyframes afr
  0% 
    transform                translate3d(10em,  0, 0)
    opacity                  0
  100%
    transform                translate3d(0, 0, 0)
    opacity                  1


// ----------------------------------------
// animations
.animation-element
  transition                 all 500ms

.anim-invisible
  opacity                    0

.anim-bounce-from-bottom
  animation                  bfb 750ms 1

.anim-bounce-from-top
  animation                  bft 750ms 1

.anim-appear-from-left
  animation                  afl 750ms 1

.anim-appear-from-right
  animation                  afr 750ms 1

