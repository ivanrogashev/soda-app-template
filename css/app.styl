// text effects
neonText(clr, opacity, clr2=clr)
  color                rgba(clr, 1)
  text-shadow          0 0 1em rgba(clr2, opacity), 0 0 2em rgba(clr2, opacity), 0 0 2em rgba(clr2, opacity)

smallNeonText(clr, opacity, clr2=clr)
  color                rgba(clr, 1) !important
  text-shadow          0 0 .5em rgba(clr2, opacity), 0 0 1em rgba(clr2, opacity), 0 0 1.5em rgba(clr2, opacity)


